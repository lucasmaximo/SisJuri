@model Sisjuri.Models.LoginViewModel
@{
    ViewBag.Title = "SisJuri - Sistema Administrador de Júri Simulado";
}

<html>
<head>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>SisJuri - Sistema Administrador de Júri Simulado</title>

    <!-- bootstrap -->
    <link rel="stylesheet" href="css/bootstrap/bootstrap.css">

    <!-- libraries -->
    <link href="css/libs/font-awesome.css" type="text/css" rel="stylesheet">

    <!-- global styles -->
    <link rel="stylesheet" type="text/css" href="css/compiled/layout.css">
    <link rel="stylesheet" type="text/css" href="css/compiled/elements.css">
    
    <!-- this page specific styles -->

    <!-- google font libraries -->

    <!--[if lt IE 9]>
        <script src="js/html5shiv.js"></script>
        <script src="js/respond.min.js"></script>
    <![endif]-->
    <!--[if lt IE 8]>
        <link href="css/libs/font-awesome-ie7.css" type="text/css" rel="stylesheet" />
    <![endif]-->


    @*<script src="//www.google-analytics.com/analytics.js" async=""></script>*@

    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-49262924-1', 'phoonio.com');
        ga('send', 'pageview');

    </script>

    <script type="text/javascript" src="js/jquery-1.10.2.js"></script>
    <script type="text/javascript" src="js/jquery.maskedinput.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $("#cpf").mask("999.999.999-99");
        });
    </script>

</head>

<body id="login-page-full">
    <header class="navbar hidden-xs hidden-sm" id="header-navbar">
        <div class="container">
            <div class="pull-right text-right login-full-create">
                Não tem uma conta? <a href="@Url.Action("CreateAluno", "Usuario")">Cadastre-se agora</a>
            </div>
        </div>
    </header>

    <div class="container">
        <div class="row">
            @{ if (ViewData["message"] != null && ViewData["message"].ToString() != "")
             {
                <div class=" col-lg-12 alert alert-success fade in" style="text-align:center">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <i class="fa fa-check-circle fa-fw fa-lg"></i>
                    <strong>@ViewData["message"]</strong>
                </div>
             }

            }
            <div class="col-lg-5 col-lg-offset-1 col-md-4 col-md-offset-1 hidden-sm hidden-xs" id="login-full-left">
                <!--<h1>SisJuri</h1>-->
                <img class="img-responsive" src="/Content/assets/img/Logo_main.png" alt="">
                <p class="text-center">
                    O SisJuri é um sistema utilizado pelo núcleo de prática jurídica da Faculdade CNEC Unaí para o planejamento e execução de júris simulados.
                </p>

            </div>

            <div class="col-lg-5 col-lg-offset-1 col-md-5 col-md-offset-1 col-xs-12">
                <div id="login-box">
                    <div class="row">
                        <div class="col-xs-12 clearfix" id="login-box-header">
                            <div class="login-box-header-red"></div>
                            <div class="login-box-header-green"></div>
                            <div class="login-box-header-yellow"></div>
                            <div class="login-box-header-purple"></div>
                            <div class="login-box-header-blue"></div>
                            <div class="login-box-header-gray"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <div id="login-box-inner">
                                <section id="loginForm">
                                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
                                    {
                                        <label>@Html.AntiForgeryToken()</label>
                                        @Html.ValidationSummary(true)

                                        <div class="input-group input-group-lg">
                                            <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                            @Html.TextBoxFor(model => model.UserCpf, new { placeholder = "CPF do usuário", id = "cpf", @class = "form-control" })
                                        </div>
                                        <label>@Html.ValidationMessageFor(model => model.UserCpf)</label>
                                        
                                        
                                        <div class="input-group input-group-lg">
                                            <span class="input-group-addon"><i class="fa fa-key"></i></span>
                                            @Html.PasswordFor(model => model.Password, new { placeholder = "Senha", maxlength = 15, @class = "form-control" })
                                        </div>                                        
                                        <label>@Html.ValidationMessageFor(model => model.Password)</label>
                                        
                                        @*<div class="form-group">
                                            <div class="checkbox">
                                                <label>
                                                    Lembrar-me
                                                    @Html.CheckBoxFor(model => model.RememberMe)
                                                </label>
                                            </div>
                                        </div>*@
                                        <div class="row-spacelogin">
                                            <div class="col-sm-6 col-xs-12 col-sm-push-6">
                                                @* <button type="submit"  class="btn btn-success col-xs-12">Acessar</button>*@
                                                <input type="submit" value="Acessar" class="btn btn-success col-xs-12" />

                                            </div>
                                            <a href="@Url.Action("RecuperarSenha", "Account")" id="login-forget-link" class="col-sm-6 col-xs-12 col-sm-pull-6">
                                                Esqueceu sua senha?
                                            </a>
                                        </div>
                                    }
                                </section>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="text-center login-create">
                    Não tem uma conta? <a href="@Url.Action("CreateAluno", "Usuario")">Cadastre-se agora</a>
                </div>
            </div>
        </div>
    </div>

    <footer id="footer-bar">
            <p id="footer-copyright">
                © @DateTime.Now.Year - Lucas Eduardo Máximo da Silva - Todos os direitos reservados.
            </p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <!-- global scripts -->
    <script src="js/jquery.js"></script>
    <script src="js/bootstrap.js"></script>

    <!-- this page specific scripts -->
    <script src="js/jquery.maskedinput.min.js"></script>
    <script src="js/bootstrap-datepicker.js"></script>
    <script src="js/moment.min.js"></script>
    <script src="js/daterangepicker.js"></script>
    <script src="js/bootstrap-timepicker.min.js"></script>
    <script src="js/select2.min.js"></script>
    <script src="js/hogan.js"></script>
    <script src="js/typeahead.min.js"></script>
    <script src="js/jquery.pwstrength.js"></script>

    <!-- theme scripts -->
    <script src="js/scripts.js"></script>

    
</body>
</html>