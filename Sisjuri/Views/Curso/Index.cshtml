@model Sisjuri.Models.curso

@{
    ViewBag.Title = "Pesquisar cursos";
}

<div class="row">
    <div class="main-box">
        <h2>Pesquisar cursos</h2>

        @using (Html.BeginForm("List", "curso"))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.LabelFor(model => model.nome_curso, "Nome do curso", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.nome_curso, new { size = 25, maxlength = 45 })
                        @Html.ValidationMessageFor(model => model.nome_curso)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Pesquisar" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
        <div>
            @Html.ActionLink("Voltar à lista", "List")
        </div>
    </div>
</div>