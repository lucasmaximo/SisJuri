@model Sisjuri.Models.faculdade

@{
    ViewBag.Title = "Cadastrar faculdade";
}

<div class="row">
    <div class="main-box">
        <h2>Cadastrar faculdade</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.LabelFor(model => model.nome_faculdade, "Nome da faculdade", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.nome_faculdade, new { size = 30, maxlength = 45 })
                        @Html.ValidationMessageFor(model => model.nome_faculdade)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.cnpj_faculdade, "CNPJ", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.cnpj_faculdade, new { id = "cnpj", size = 20, maxlength = 18 })
                        @Html.ValidationMessageFor(model => model.cnpj_faculdade)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.endereco_faculdade, "Endereço", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.endereco_faculdade, new { size = 40, maxlength = 60 })
                        @Html.ValidationMessageFor(model => model.endereco_faculdade)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.telefone_faculdade, "Telefone", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.telefone_faculdade, new { id = "telefoneold", size = 20, maxlength = 15 })
                        @Html.ValidationMessageFor(model => model.telefone_faculdade)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Cadastrar" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
        <div>
            @Html.ActionLink("Cancelar", "List")
        </div>
    </div>
</div>