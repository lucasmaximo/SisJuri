@model Sisjuri.Models.faculdade

@{
    ViewBag.Title = "Excluir faculdade";
}

<div class="row">
    <div class="main-box">
        <h2>Tem certeza que deseja excluir esta faculdade?</h2>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.LabelFor(model => model.nome_faculdade, "Nome da faculdade")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.nome_faculdade)
                </dd>

                <dt>
                    @Html.LabelFor(model => model.cnpj_faculdade, "CNPJ")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.cnpj_faculdade)
                </dd>

                <dt>
                    @Html.LabelFor(model => model.endereco_faculdade, "Endereço")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.endereco_faculdade)
                </dd>

                <dt>
                    @Html.LabelFor(model => model.telefone_faculdade, "Telefone")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.telefone_faculdade)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Excluir" class="btn btn-default" /> |
                    @Html.ActionLink("Voltar à lista", "List")
                </div>
            }
        </div>
    </div>
</div>