@model Sisjuri.Models.presenca

@{
    Sisjuri.Models.usuario user = ((Sisjuri.Models.usuario)Session["usuario"]);
    ViewBag.Title = "Gerar certificado";
}

<div class="row">
    <div class="main-box">
        <h2>Gerar certificado</h2>

        @using (Html.BeginForm("Index","GerarCertificado", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.LabelFor(model => user.nome_completo, "Nome do aluno", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DisplayFor(model => user.nome_completo)
                        @Html.ValidationMessageFor(model => user.nome_completo)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.pfk_id_juri, "Júri simulado", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.pfk_id_juri, new SelectList(ViewData["lstJuri"] as System.Collections.IEnumerable, "id_juri", "nome_juri"))
                        @Html.ValidationMessageFor(model => model.pfk_id_juri)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Gerar Certificado" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>