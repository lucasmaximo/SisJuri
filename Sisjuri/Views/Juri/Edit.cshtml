@model Sisjuri.Models.juri

@{
    ViewBag.Title = "Editar júri simulado";
}

<div class="row">
    <div class="main-box">
        <h2>Editar júri simulado</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.id_juri)

                <div class="form-group">
                    @Html.LabelFor(model => model.nome_juri, "Nome do júri simulado", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.nome_juri, new { size = 30, maxlength = 45 })
                        @Html.ValidationMessageFor(model => model.nome_juri)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.data_hora_juri, "Data e hora do evento", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.data_hora_juri, new { id = "datahora" })
                        @Html.ValidationMessageFor(model => model.data_hora_juri)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.local_juri, "Local do evento", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.local_juri, new { size = 30, maxlength = 45 })
                        @Html.ValidationMessageFor(model => model.local_juri)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.juri_ativo, "Inscrições abertas?", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.CheckBoxFor(model => model.juri_ativo)
                        @Html.ValidationMessageFor(model => model.juri_ativo)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.fk_id_npj, "NPJ", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.fk_id_npj, new SelectList(ViewData["lstNPJ"] as System.Collections.IEnumerable, "id_npj", "nome_npj"))
                        @Html.ValidationMessageFor(model => model.fk_id_npj)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Salvar" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
        <div>
            @Html.ActionLink("Cancelar", "List")
        </div>
    </div>
</div>