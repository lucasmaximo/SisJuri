@model Sisjuri.Models.npj

@{
    ViewBag.Title = "Cadastrar NPJ";
}

<div class="row">
    <div class="main-box">
        <h2>Cadastrar NPJ</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.LabelFor(model => model.nome_npj, "Nome do NPJ", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.nome_npj, new { size = 30, maxlength = 45 })
                        @Html.ValidationMessageFor(model => model.nome_npj)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.cnpj_npj, "CNPJ", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.cnpj_npj, new { id = "cnpj", size = 20, maxlength = 18 })
                        @Html.ValidationMessageFor(model => model.cnpj_npj)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.endereco_npj, "Endereço", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.endereco_npj, new { size = 40, maxlength = 60 })
                        @Html.ValidationMessageFor(model => model.endereco_npj)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.telefone_npj, "Telefone", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.telefone_npj, new { id = "telefoneold", size = 20, maxlength = 15 })
                        @Html.ValidationMessageFor(model => model.telefone_npj)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.fk_id_faculdade, "Faculdade", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.fk_id_faculdade, new SelectList(ViewData["lstFaculdade"] as System.Collections.IEnumerable, "id_faculdade", "nome_faculdade"))
                        @Html.ValidationMessageFor(model => model.fk_id_faculdade)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Cadastrar" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
        <div>
            @Html.ActionLink("Cancelar", "List")
        </div>
    </div>
</div>
