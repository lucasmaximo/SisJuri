@model Sisjuri.Models.participantes_reuniao

@{
    ViewBag.Title = "Editar participante da reunião";
}

<div class="row">
    <div class="main-box">
        <h2>Editar participante da reunião</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.id_participante_reuniao)
                @Html.HiddenFor(model => model.pfk_id_reuniao)
                @Html.HiddenFor(model => model.pfk_id_inscricao)

                <div class="form-group">
                    @Html.LabelFor(model => model.presenca_reuniao, "Esteve presente na reunião?", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.CheckBoxFor(model => model.presenca_reuniao)
                        @Html.ValidationMessageFor(model => model.presenca_reuniao)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Salvar" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
        <div>
            @Html.ActionLink("Cancelar", "ListParticipantesByReuniao", new { id = Model.pfk_id_reuniao })
        </div>
    </div>
</div>