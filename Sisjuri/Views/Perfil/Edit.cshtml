@model Sisjuri.Models.perfil

@{
    ViewBag.Title = "Editar perfil";
}

<h1>Editar</h1>
<div class="row">
    <div class="main-box">
        <h2>Perfil</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.id_perfil)

                <div class="form-group">
                    @Html.LabelFor(model => model.nome_perfil, "Nome do perfil", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.nome_perfil, new { size = 30, maxlength = 30 })
                        @Html.ValidationMessageFor(model => model.nome_perfil)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.descricao_perfil, "Descrição do perfil", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.descricao_perfil, new { cols = 50, rows = 4 })
                        @Html.ValidationMessageFor(model => model.descricao_perfil)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Salvar" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
        <div>
            @Html.ActionLink("Voltar à lista", "List")
        </div>
    </div>
</div>