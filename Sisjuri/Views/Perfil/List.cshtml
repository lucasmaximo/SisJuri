@model IEnumerable<Sisjuri.Models.perfil> 

@{
    ViewBag.Title = "Lista de perfis";
}

<h1>Lista</h1>
<div class="row">
    <div class="main-box">

        <h2>Perfis</h2>        
        <p>
            @Html.ActionLink("Perquisar perfis" , "Index")
            | @Html.ActionLink("Cadastrar novo perfil", "Create")
        </p>
        <br />
        @{ if (ViewData["message"] != null && ViewData["message"].ToString() != "")
           {
                <div class="alert alert-success fade in">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <i class="fa fa-check-circle fa-fw fa-lg"></i>
                    <strong>@ViewData["message"]</strong>
                </div>
           }
               
        }

        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            <span>Nome do perfil</span>
                        </th>
                        <th>
                            <span>Descrição do perfil</span>
                        </th>
                        <th>
                            <span>Ações</span>
                        </th>
                    </tr>
                </thead>

                @foreach (var item in Model)
                {
                    <tbody>
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.nome_perfil)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.descricao_perfil)
                            </td>

                            <td style="width: 15%;">
                                <a title="Ver detalhes" class="table-link" href="@Url.Action("Details", "Perfil", new { id = item.id_perfil})">
                                    <span class=" fa-stack">
                                    <i class="fa fa-square fa-stack-2x"></i>
                                    <i class="fa fa-search-plus fa-stack-1x fa-inverse"></i>
                                    </span>
                                </a>
                                <a title="Editar" class="table-link primary" href="@Url.Action("Edit", "Perfil", new { id = item.id_perfil})">
                                    <span class="fa-stack">
                                        <i class="fa fa-square fa-stack-2x"></i>
                                        <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                    </span>
                                </a>
                                <a title="Excluir" class="table-link danger" href="@Url.Action("Delete", "Perfil", new { id = item.id_perfil})">
                                    <span class="fa-stack">
                                        <i class="fa fa-square fa-stack-2x"></i>
                                        <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
                                    </span>
                                </a>
                            </td>        
                        </tr>
                    </tbody>
                }
            </table>
            <hr />
        </div>
    </div>
</div>