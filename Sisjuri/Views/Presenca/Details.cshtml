@model Sisjuri.Models.presenca

@{
    ViewBag.Title = "Detalhes";
    Sisjuri.Models.usuario user = ((Sisjuri.Models.usuario)Session["usuario"]);
}

<div class="row">
    <div class="main-box">
        <h2>Detalhes do participante do júri simulado</h2>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.LabelFor(model => model.juri.nome_juri, "Participante do")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.juri.nome_juri)
                </dd>

                <dt>
                    @Html.LabelFor(model => model.inscricao.usuario.nome_completo, "Nome do aluno")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.inscricao.usuario.nome_completo)
                </dd>

                <dt>
                    @Html.LabelFor(model => model.inscricao.usuario.num_matric_aluno, "Nº da matrícula")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.inscricao.usuario.num_matric_aluno)
                </dd>

                <dt>
                    @Html.LabelFor(model => model.inscricao.usuario.curso.nome_curso, "Curso")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.inscricao.usuario.curso.nome_curso)
                </dd>

                <dt>
                    @Html.LabelFor(model => model.inscricao.usuario.periodo_aluno, "Período")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.inscricao.usuario.periodo_aluno)º período
                </dd>

                <dt>
                    @Html.LabelFor(model => model.inscricao.funcao.nome_funcao, "Função")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.inscricao.funcao.nome_funcao)
                </dd>

                <dt>
                    @Html.LabelFor(model => model.pres_entrada, "Entrada")
                </dt>

                <dd>
                    @{
                        if (Model.pres_entrada == null || Model.pres_entrada == false)
                        {
                            <span class="label label-danger">Não</span>
                        }
                        else
                        {
                            <span class="label label-success">Sim</span>
                        }
                    }
                </dd>

                @{
                    if (Model.inscricao.funcao.nome_funcao == "Jurado")
                    {
                    <dt>
                        @Html.LabelFor(model => model.conselho_sentenca, "Fez parte do conselho de sentença?")
                    </dt>

                    <dd>
                        @{
                            if (Model.conselho_sentenca == true)
                            {
                                <span class="label label-success">Sim</span>
                            }
                            else
                            {
                                <span class="label label-danger">Não</span>
                            }
                        }
                    </dd>
                    }
                }

                <dt>
                    @Html.LabelFor(model => model.pres_saida_total, "Saída")
                </dt>

                <dd>
                    @{
                        if (Model.pres_saida_total == true && Model.pres_saida_parcial == false)
                        {
                            <span class="label label-success">Sim</span>
                        }
                        else
                        {
                            <span>-</span>
                        }
                    }
                </dd>

                <dt>
                    @Html.LabelFor(model => model.pres_saida_parcial, "Saída antes do fim")
                </dt>

                <dd>
                    @{
                        if (Model.pres_saida_parcial == true && Model.pres_saida_total == false)
                        {
                            <span class="label label-success">Sim</span>
                        }
                        else
                        {
                            <span>-</span>
                        }
                    }
                </dd>

                <dt>
                    @Html.LabelFor(model => model.hora_saida_parcial, "Hora da saída")
                </dt>

                <dd>
                    @{
                        if (Model.pres_saida_parcial == true && Model.pres_saida_total == false)
                        {
                            @Html.DisplayFor(modelItem => Model.hora_saida_parcial)
                        }
                        else
                        {
                            <span>-</span>
                        }
                    }
                </dd>

            </dl>
        </div>
        <p>
            @{if (user.fk_id_perfil == 1 || user.fk_id_perfil == 2)
            {
                @Html.ActionLink("Editar", "Edit", new { id = Model.id_presenca, idJuri = Model.pfk_id_juri })
            }}
            | @Html.ActionLink("Voltar à lista de presença", "ListAllByAutorizados", new { id = Model.pfk_id_juri, idJuri = Model.pfk_id_juri })
        </p>
    </div>
</div>