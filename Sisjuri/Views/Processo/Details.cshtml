@model Sisjuri.Models.processo

@{
    ViewBag.Title = "Detalhes";
    Sisjuri.Models.usuario user = ((Sisjuri.Models.usuario)Session["usuario"]);
}

<div class="row">
    <div class="main-box">
        <h2>Detalhes do processo</h2>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.LabelFor(model => model.num_processo, "Número do processo")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.num_processo)
                </dd>

                <dt>
                    @Html.LabelFor(model => model.descricao_processo, "Descrição")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.descricao_processo)
                </dd>

                <dt>
                    @Html.LabelFor(model => model.juri.nome_juri, "Pertence ao")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.juri.nome_juri)
                </dd>

            </dl>
        </div>
        <p>
            @{if (user.fk_id_perfil == 1 || user.fk_id_perfil == 2){
                @Html.ActionLink("Editar", "Edit", new { id = Model.id_processo })
            }}
            | @Html.ActionLink("Voltar à lista", "List")
        </p>
    </div>
</div>