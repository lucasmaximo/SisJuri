@model Sisjuri.Models.ques_agravante

@{
    ViewBag.Title = "Excluir quesito agravante";
}

<div class="row">
    <div class="main-box">
        <h2>Tem certeza que deseja excluir este quesito agravante?</h2>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.LabelFor(model => model.quesito_agravante, "Quesito agravante")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.quesito_agravante)
                </dd>

                <dt>
                    @Html.LabelFor(model => model.qag_sim, "Votos 'Sim'")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.qag_sim)
                </dd>

                <dt>
                    @Html.LabelFor(model => model.qag_nao, "Votos 'Não'")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.qag_nao)
                </dd>

                <dt>
                    @Html.LabelFor(model => model.processo.num_processo, "Pertence ao processo nº")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.processo.num_processo)
                </dd>

                <dt>
                    @Html.LabelFor(model => model.processo.juri.nome_juri, "Julgado no")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.processo.juri.nome_juri)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Excluir" class="btn btn-default" /> |
                    @Html.ActionLink("Voltar à lista", "ListByIdProcess", new { id = Model.fk_id_processo })
                </div>
            }
        </div>
    </div>
</div>