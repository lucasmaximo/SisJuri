@model Sisjuri.Models.ques_autoria

@{
    ViewBag.Title = "Detalhes";
    Sisjuri.Models.usuario user = ((Sisjuri.Models.usuario)Session["usuario"]);
}

<div class="row">
    <div class="main-box">
        <h2>Detalhes do quesito da autoria</h2>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.LabelFor(model => model.quesito_autoria, "Quesito da autoria")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.quesito_autoria)
                </dd>

                <dt>
                    @Html.LabelFor(model => model.qa_sim, "Votos 'Sim'")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.qa_sim)
                </dd>

                <dt>
                    @Html.LabelFor(model => model.qa_nao, "Votos 'Não'")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.qa_nao)
                </dd>

                <dt>
                    @Html.LabelFor(model => model.processo.num_processo, "Pertence ao processo nº")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.processo.num_processo)
                </dd>

                <dt>
                    @Html.LabelFor(model => model.processo.juri.nome_juri, "Julgado no")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.processo.juri.nome_juri)
                </dd>

            </dl>
        </div>
        <p>
            @{if (user.fk_id_perfil == 1 || user.fk_id_perfil == 2){
                @Html.ActionLink("Editar", "Edit", new { id = Model.id_quesito_autoria })
            }}
            | @Html.ActionLink("Voltar à lista", "ListByIdProcess", new { id = Model.fk_id_processo })
        </p>
    </div>
</div>