@model Sisjuri.Models.reuniao

@{
    ViewBag.Title = "Excluir reunião";
}

<div class="row">
    <div class="main-box">
        <h2>Tem certeza que deseja excluir esta reunião?</h2>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.LabelFor(model => model.nome_reuniao, "Nome da reunião")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.nome_reuniao)
                </dd>

                <dt>
                    @Html.LabelFor(model => model.data_hora_reuniao, "Data e hora")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.data_hora_reuniao)
                </dd>

                <dt>
                    @Html.LabelFor(model => model.local_reuniao, "Local da reunião")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.local_reuniao)
                </dd>

                <dt>
                    @Html.LabelFor(model => model.resultado_reuniao, "Resultado da reunião")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.resultado_reuniao)
                </dd>

                <dt>
                    @Html.LabelFor(model => model.juri.nome_juri, "Pertence ao")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.juri.nome_juri)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Excluir" class="btn btn-default" /> |
                    @Html.ActionLink("Voltar à lista", "List")
                </div>
            }
        </div>
    </div>
</div>