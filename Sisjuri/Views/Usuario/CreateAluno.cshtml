@model Sisjuri.Models.usuario

@{
    ViewBag.Title = "Cadastrar usuário";
}

<html>
<head>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>SisJuri - Sistema Administrador de Júri Simulado</title>

    <!-- bootstrap -->
    <link rel="stylesheet" href="css/bootstrap/bootstrap.css">

    <!-- libraries -->
    <link href="css/libs/font-awesome.css" type="text/css" rel="stylesheet">

    <!-- global styles -->
    <link rel="stylesheet" type="text/css" href="css/compiled/layout.css">
    <link rel="stylesheet" type="text/css" href="css/compiled/elements.css">

    <!-- this page specific styles -->
    <!-- google font libraries -->
    <!--[if lt IE 9]>
        <script src="js/html5shiv.js"></script>
        <script src="js/respond.min.js"></script>
    <![endif]-->
    <!--[if lt IE 8]>
        <link href="css/libs/font-awesome-ie7.css" type="text/css" rel="stylesheet" />
    <![endif]-->
    @*<script src="//www.google-analytics.com/analytics.js" async=""></script>*@

    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-49262924-1', 'phoonio.com');
        ga('send', 'pageview');

    </script>

    <script type="text/javascript" src="js/jquery-1.10.2.js"></script>
    <script type="text/javascript" src="js/jquery.maskedinput.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $("#cpf").mask("999.999.999-99");
            $("#telefoneold").mask("(99) 9999-9999");
            $("#telefonenew").mask("(99) 99999-9999");
        });
    </script>

</head>

<body id="login-page-full">
    <header class="navbar" id="header-navbar">
        <div class="container">
            <a href="/Account/Login" id="logo" class="navbar-brand col-md-1 col-sm-3 col-xs-12">
                <img src="/Content/assets/img/Logo_topo_site.png" alt="">
            </a>
            <div class="nav-no-collapse pull-right" id="header-nav">
                <ul class="nav navbar-nav pull-right">
                    <li id="profile" class="dropdown profile-dropdown">

                        @Html.Partial("_LoginPartial")

                    </li>
                </ul>
            </div>
        </div>
    </header>

    <div class="row">
        <div id="content-wrapper" class="col-md-12">
            <div class="main-box">
                <h2>Novo usuário</h2>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true)

                        <div class="form-group">
                            @Html.LabelFor(model => model.nome_completo, "Nome Completo", new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.nome_completo, new { size = 30, maxlength = 45 })
                                @Html.ValidationMessageFor(model => model.nome_completo)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.cpf_usuario, "CPF", new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.cpf_usuario, new { id = "cpf", size = 14, maxlength = 14 })
                                @Html.ValidationMessageFor(model => model.cpf_usuario)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.senha_usuario, "Senha", new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.PasswordFor(model => model.senha_usuario, new { size = 20, maxlength = 15 })
                                @Html.ValidationMessageFor(model => model.senha_usuario)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.email_usuario, "Email", new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.email_usuario, new { size = 30, maxlength = 45 })
                                @Html.ValidationMessageFor(model => model.email_usuario)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.telefone_usuario, "Telefone", new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.telefone_usuario, new { id = "telefonenew", size = 20, maxlength = 15 })
                                @Html.ValidationMessageFor(model => model.telefone_usuario)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.num_matric_aluno, "Nº de matrícula", new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.num_matric_aluno, new { size = 15, maxlength = 15 })
                                @Html.ValidationMessageFor(model => model.num_matric_aluno)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.fk_id_curso, "Curso", new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("fk_id_curso", new SelectList(ViewData["lstCurso"] as System.Collections.IEnumerable, "id_curso", "nome_curso"))
                                @Html.ValidationMessageFor(model => model.fk_id_curso)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.periodo_aluno, "Período", new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.periodo_aluno, new { size = 3, maxlength = 3 }) º
                                @Html.ValidationMessageFor(model => model.periodo_aluno)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Cadastrar" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }
                <div>
                    @Html.ActionLink("Cancelar", "Login", "Account")
                </div>
            </div>
            <footer id="footer-bar">
                <p id="footer-copyright-layout">
                    © @DateTime.Now.Year - Lucas Eduardo Máximo da Silva - Todos os direitos reservados.
                </p>
            </footer>
        </div>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <!-- global scripts -->
    <script src="js/jquery.js"></script>
    <script src="js/bootstrap.js"></script>

    <!-- this page specific scripts -->
    <script src="js/jquery.maskedinput.min.js"></script>
    <script src="js/bootstrap-datepicker.js"></script>
    <script src="js/moment.min.js"></script>
    <script src="js/daterangepicker.js"></script>
    <script src="js/bootstrap-timepicker.min.js"></script>
    <script src="js/select2.min.js"></script>
    <script src="js/hogan.js"></script>
    <script src="js/typeahead.min.js"></script>
    <script src="js/jquery.pwstrength.js"></script>

    <!-- theme scripts -->
    <script src="js/scripts.js"></script>

    </div>
</body>
</html>